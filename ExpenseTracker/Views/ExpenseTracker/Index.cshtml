@model IEnumerable<ExpenseTracker.Models.ExpenseGroupVM>

@{
    ViewBag.Title = "Expense Group Listings";
}

<h2>Expense Group Listings</h2>


@if (Model.Count() > 0)
{

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @if (item.HasExpenses)
                    {
                        @Html.ActionLink("View Details", "Details", new { GroupId = item.Id })
                    }
                    else
                    {
                        <p>No Expense added for this group, Use this Link add @Html.ActionLink("Add Expense", "AddExpense", new { GroupId = item.Id })</p>
                    }

                </td>
            </tr>
        }

    </table>
}
else
{

    <p><strong>No Groups added please use this link to add group </strong> @Html.ActionLink("Add Group", "AddGroup")</p>
    
}
