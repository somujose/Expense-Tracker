@model ExpenseTracker.Models.ExpenseSummaryVM

@{
    ViewBag.Title = "Details";
}


<div class="center-block">
   
    <hr />
    <dl class="dl-horizontal">
        <dt class="pull-left">
            @Html.DisplayNameFor(model => model.NumberOfPeople)
        </dt>

        <dd class="pull-right">
            @Html.DisplayFor(model => model.NumberOfPeople)
        </dd>

        <dt class="pull-left">
            @Html.DisplayNameFor(model => model.AverageExpense)
        </dt>

        <dd class="pull-right">
            @Html.DisplayFor(model => model.AverageExpense)
        </dd>

        <dt class="pull-left">
            @Html.DisplayNameFor(model => model.ToalExpense)
        </dt>

        <dd class="pull-right">
            @Html.DisplayFor(model => model.ToalExpense)
        </dd>

    </dl>
</div>
<div class="clearfix"></div>

<hr />

<div class="clearfix"></div>

@if (Model.AmountCurrentlyPaidByIndividuals != null && Model.AmountCurrentlyPaidByIndividuals.Count > 0)
{
<div class="row pull-left">


    <ul class="list-group">
        <li class="list-group-item active">Amount Spend Currently</li>
        @foreach (var item in Model.AmountCurrentlyPaidByIndividuals)
        {
            <li class="list-group-item">@item</li>
        }
    </ul>






</div>

}



@if (Model.AmountOwedByIndividuals != null && Model.AmountOwedByIndividuals.Count > 0)
{
    <div class="row pull-right">

        <ul class="list-group">
            <li class="list-group-item active">Amount Owed Currently</li>
            @foreach (var item in Model.AmountOwedByIndividuals)
            {
                <li class="list-group-item">@item</li>
            }
        </ul>




    </div>

}

<div class="clearfix"></div>
<div class="pull-left">
    <p>
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>

<div class="pull-right">
    <p>
       
        @Html.ActionLink("Add more Expense", "AddExpense", new { GroupId = Model.GroupId })
    </p>
</div>

<div class="clearfix"></div>
